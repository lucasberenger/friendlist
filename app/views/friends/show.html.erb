<p style="color: green"><%= notice %></p>


<div class="container bg-light p-2 border rounded">
  <ul class="list-group">
    <li class="list-group-item">
      <strong>First Name</strong>
      <p><%= @friend.first_name %></p>
    </li>
    <li class="list-group-item">
      <strong>Last Name</strong>
      <p><%= @friend.last_name %></p>
    </li>
    <li class="list-group-item">
      <strong>Email</strong>
      <p><%= @friend.email %></p>
    </li>
    <li class="list-group-item">
      <strong>Phone</strong>
      <p><%= @friend.phone %></p>
    </li>
    <li class="list-group-item">
      <strong>Instagram</strong>
      <p><%= @friend.insta %></p>
    </li>
  </ul>
  <div class="container-sm mt-2">
    <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-secondary" %>
    <%= link_to "Back to friends", friends_path, class:"btn btn-secondary"  %>

    <%= button_to "Delete", @friend, class:'btn btn-danger mt-2', method: :delete%>
  </div>
</div>
