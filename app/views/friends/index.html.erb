<p style="color: green"><%= notice %></p>

<h1>Friend List</h1>

<table class="table table-dark table-hover">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Instagram</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody class="table-secondary">
    <tr>
      <% @friends.each do |friend| %>
      <td> <%= friend.first_name %></td>
      <td> <%= friend.last_name %></td>
      <td> <%= friend.email %></td>
      <td> <%= friend.phone %></td>
      <td> <%= friend.insta %></td>
      <td colspan="3"><%= link_to "Show this friend", friend %></td>
    </tr>
      <% end %>
  </tbody>
</table>
<%= link_to 'New Friend', new_friend_path, class:"btn btn-secondary "%>


